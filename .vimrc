set nocompatible              " be iMproved, required
filetype off                  " required

" numbers 
set number
set ruler

" indentation
set autoindent
set ignorecase
set expandtab
set shiftwidth=4
set smarttab
set tabstop=4
set wrap

" search options
set hlsearch
set incsearch
set ignorecase
set smartcase

" text rendering
set scrolloff=3
set sidescrolloff=5

" UI
set laststatus=2
set wildmenu
set foldcolumn=1
set background=dark

"set cursorline
set noerrorbells
set mouse=a
set title

" code 
"set foldmethod=indent
set foldnestmax=5

" miscs
noremap ; :
noremap : ;
set history=500
set backspace=eol,start,indent
